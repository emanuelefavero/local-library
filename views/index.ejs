<!-- HEADER -->
<%- include('./partials/header.ejs') %>

<!-- BLOCK CONTENT -->
<h1><%= title %></h1>
<p>
  <%= title %> is a website for browsing and managing books. You can browse the
  catalog according to books, authors, genres, create new data and check if
  books are available.
</p>

<h2>Dynamic content</h2>
<% if (error) { %>
<p>Error getting dynamic content.</p>
<% } else { %>
<p>The library has the following record counts:</p>
<ul>
  <li><strong>Books: </strong> <%= data.book_count %></li>
  <li><strong>Copies: </strong> <%= data.book_instance_count %></li>
  <li>
    <strong>Copies Available: </strong> <%= data.book_instance_available_count
    %>
  </li>
  <li><strong>Authors: </strong> <%= data.author_count %></li>
  <li><strong>Genres: </strong> <%= data.genre_count %></li>
</ul>
<% } %>
<!-- FOOTER -->
<%- include('./partials/footer.ejs') %>
